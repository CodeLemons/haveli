<div class="relative h-full">
    <video autoplay muted loop class="contact-video brightness-50 z-0 blur-md">
        <source src="/assets/broll.mp4" type="video/mp4">
    </video>
    <div class="contact-format container mx-auto">
        <%= link_to homepage_path(locale: params[:locale].downcase) do %>
            <i class="fa-solid fa-arrow-left text-4xl cursor-pointer px-5 mt-10"></i>
        <% end %>
        <p style="font-family: 'Montez', cursive;" class="text-center font-extrabold mx-auto text-5xl py-10"><%= params[:locale] == "en" ? "Contact us" : "Contacteaza-ne" %></p>
        <div class="contact-form flex flex-col justify-center items-center  p-10 md:flex-row">
            <div class="pb-20 border-b-2 md:border-b-0 md:pb-0 border-orange-200">
                <%= simple_form_for @contact, url: contacts_path do |f| %>
                <div class="full-name flex flex-col md:flex-row py-3">
                    <div class="py-3">
                        <%= f.label params[:locale] == "en" ? "First name" : "Nume" %>
                        <%= f.input :first_name, input_html: { class: "md:mr-5" }, label: false %>
                    </div>
                    <div class="py-3">
                        <%= f.label params[:locale] == "en" ? "Last name" : "Prenume" %>
                        <%= f.input :last_name, label: false %>
                    </div>
                </div>
                <div class="email-phone flex flex-col md:flex-row pb-10">
                    <div class="py-3">
                        <%= f.label "Email" %>
                        <%= f.input :email, input_html: { class: "md:mr-5" }, label: false %>
                    </div>
                    <div class="py-3">
                        <%= f.label params[:locale] == "en" ? "Phone" : "Telefon" %>
                        <%= f.input :phone, label: false %>
                    </div>
                </div>
                <div class="pt-10">
                    <%= f.label params[:locale] == "en" ? "Message" : "Mesaj" %>
                    <%= f.input :message, input_html: { class: "mb-5"}, label: false %>
                </div>
                <%= f.submit params[:locale] == "en" ? "Send" : "Trimite", class: "submit-button" %>
                <% end %>
            </div>
            <div class="container my-10 md:my-0 md:ml-0 grid grid-rows-2 lg:grid-flow-col p-5 gap-5 xl:gap-10 ">
                <div class="contact-card p-1 xl:p-5">
                    <i class="fa-solid fa-mobile-screen text-2xl lg:text-4xl"></i>
                    <p class="text-xl lg:text-3xl"><%= params[:locale] == "en" ? "TELEPHONE" : "TELEFON" %></p>
                    <p><%= params[:locale] == "en" ? "Accessible" : "De" %> <strong><%= params[:locale] == "en" ? "Tuesday - Sunday from 12:00 PM" : "Marti pana Duminica de la 12:00 PM" %></strong></p>
                    <p class="text-xs  lg:text-xl">(+40) 21 211 03 90</p>
                    <p class="text-xs  lg:text-xl">(+40) 721 721 640</p>
                </div>
                <div class="contact-card p-1 xl:p-5">
                    <i class="fa-regular fa-map text-2xl lg:text-4xl"></i>
                    <p class="text-xl lg:text-3xl"><%= params[:locale] == "en" ? "ADDRESS" : "ADRESA" %></p>
                    <p><%= params[:locale] == "en" ? "Episcopul Radu Street Nr. 3 (Mihai Eminescu Area)" : "Strada Episcopul Radu Nr. 3 (Zona Mihai Eminescu)" %></p>
                </div>
                <div class="contact-card p-1 xl:p-5">
                    <i class="fa-regular fa-envelope text-2xl lg:text-4xl"></i>
                    <p class="text-xl lg:text-3xl">E-MAIL</p>
                    <p>contact@haveli.ro</p>
                </div>
                <div class="contact-card p-1 xl:p-5">
                    <i class="fa-regular fa-clock text-2xl lg:text-4xl"></i>
                    <p class="text-xl lg:text-3xl"><%= params[:locale] == "en" ? "OPENING HOURS" : "PROGRAM DE LUCRU" %></p>
                    <p><strong>12:00 PM - 11:00 PM</strong></p>
                    <p><strong><%= params[:locale] == "en" ? "Tuesday to Sunday" : "Marti - Duminica" %></strong></p>
                </div>
            </div>
        </div>
        <footer class="footer-forms text-center text-orange-20000 border-t-2 border-dashed border-orange-200" style="background-color: #0F0606;">
            <div class="text-center text-orange-200 p-4" style="background-color: rgba(0, 0, 0, 0.2);">
            Â© 2023 Copyright:
            <a class="text-orange-200" href="https://www.linkedin.com/in/alihamzaasam/">Ali</a>
            </div>
        </footer>
    </div>
</div>